# AgnoTeam Configuration
# Copy this file to .env and update with your values

# =============================================================================
# LLM Configuration
# =============================================================================

# OpenAI API Key (recommended for best performance)
OPENAI_API_KEY=sk-your-openai-key

# Anthropic API Key (alternative)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Model Configuration
DEFAULT_MODEL=gpt-4o
SPECIALIST_MODEL=gpt-4o-mini

# =============================================================================
# Mattermost Configuration
# =============================================================================

# Mattermost server URL (without trailing slash)
MATTERMOST_URL=https://mattermost.example.com

# Bot token (create bot account in Mattermost and get token)
MATTERMOST_TOKEN=your-bot-token

# Team name where the bot operates
MATTERMOST_TEAM=main

# Bot username (for mention detection)
MATTERMOST_BOT_NAME=executive-bot

# Only respond to @mentions and DMs (recommended for busy channels)
MATTERMOST_REPLY_TO_MENTIONS_ONLY=true

# =============================================================================
# Mem0 Memory Configuration
# =============================================================================

# LLM provider for memory operations (openai, anthropic, ollama)
MEM0_PROVIDER=openai

# Vector store provider (qdrant, chroma, pinecone)
MEM0_VECTOR_STORE=qdrant

# Vector store URL (for Qdrant)
MEM0_VECTOR_STORE_URL=http://localhost:6333

# Collection name for memories
MEM0_COLLECTION_NAME=agnoteam_memories

# =============================================================================
# ERPNext MCP Configuration
# =============================================================================

# ERPNext Projects MCP server URL
ERPNEXT_PROJECTS_MCP_URL=https://9547--main--megaspace--jxu002700.xuperson.org/mcp

# ERPNext CRM MCP server URL
ERPNEXT_CRM_MCP_URL=https://9557--main--megaspace--jxu002700.xuperson.org/mcp

# =============================================================================
# Gitea MCP Configuration
# =============================================================================

# Gitea MCP server URL
GITEA_MCP_URL=https://8765--main--megaspace--jxu002700.xuperson.org/mcp

# =============================================================================
# Server Configuration
# =============================================================================

# Database URL for AgentOS persistence
DATABASE_URL=sqlite:///agnoteam.db

# Server host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (enables auto-reload and verbose logging)
DEBUG=false
